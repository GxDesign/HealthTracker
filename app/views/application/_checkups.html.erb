<div id="checkups-badges">

	<% current_user.checkups.each_with_index do |checkup, ix| %>
		<% if checkup == "empty" %>
	    	<div class="checkup empty" id="cu-<%= ix %>">
	    	</div>
	    <% else %>
	    <div class="active-checkup <%= checkup[0].appt_type.downcase %>-img" >
	      <div class="info">
	        <h3><%= checkup[0].appt_type %></h3>
	      </div>
		  <div class="days-left">
		  	<% days = distance_of_time_in_words(Date.current, checkup[0].cal_date) %>
		  	<%= days.split()[0].to_i %>
	      </div>  

	    </div>
	    <% end %>
	<% end %>

</div>


<script>
	$(".active-checkup").each(function(){
		var daysleft = $(this).children(".days-left").text();
		var days = parseInt(daysleft);

		if(days < 7){
			$(this).css("border", "5px solid #EF4949")
		}else if(days < 15){
			$(this).css("border", "5px solid yellow")
		}
	});
</script>
