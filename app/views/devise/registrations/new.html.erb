<div class="single-container register-screen animated fadeInDown">
  <section class="sign-widget-title">
    <h1>Health <b>Tracker</b></h1>
  </section>
  <section class="sign-widget">
    <header>
      <h4>Signup to Start tracking <b>your</b> health</h4>
    </header>
    <div class="body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "no-margin"}) do |f| %>
      <%= devise_error_messages! %>

      <fieldset>
        <div class="form-group">
            <%= f.label :avatar%>
            <%= f.file_field :avatar %>
        </div>

        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-info-circle"></i>
            </span>
            <!-- fullname id -->
            <%= f.text_field :first_name, autocomplete: "off", class: "form-control", placeholder: "FirstName" %>
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-info-circle"></i>
            </span>
            <!-- fullname id -->
            <%= f.text_field :last_name, autocomplete: "off", class: "form-control", placeholder: "LastName" %>
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-envelope"></i>
            </span>
            <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control", id: "email" %>
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-lock"></i>
            </span>
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control", id: "password" %>
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-lock"></i>
            </span>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-lock"></i>
            </span>
            <%= f.date_field :birthdate, autocomplete: "off", placeholder: "Birthdate", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-lock"></i>
            </span>
            <%= f.number_field :height, autocomplete: "off", placeholder: "Height", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-lock"></i>
            </span>
            <%= f.number_field :weight, autocomplete: "off", placeholder: "Weight", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-lock"></i>
            </span>
            <%= f.text_field :gender, autocomplete: "off", placeholder: "Gender", class: "form-control" %>
          </div>
        </div>

      </fieldset>
      <div class="form-actions">
        <button class="btn btn-block btn-primary" type="submit">
          <span class="fa-icon-circle">
            <i class="fa fa-sign-in"></i>
          </span>
          <small class="l-mar-5">Sign up</small>
        </button>
        <span class="login">
          Already have an account?
          <%= render "devise/shared/links" %>
        </span>
      </div>
      <% end %>
      <!-- End form -->
    </div>
    <footer>
      <div class="twitter-login">
        <a href="index.html">
          <span>
            <i class="fa fa-twitter"></i>
            <span class="l-mar-5">Sign up with Twitter</span>
          </span>
        </a>
      </div>
      <div class="facebook-login">
        <a href="index.html">
          <span>
            <i class="fa fa-facebook-official"></i>
            <span class="l-mar-5">Sign up with Facebook</span>
          </span>
        </a>
      </div>
    </footer>
  </section>
</div>
