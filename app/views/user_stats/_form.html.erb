<%= form_for(@user_stat) do |f| %>
  <div class="field">
    <%= f.label :sleep %><br>
    <%= f.time_select :sleep %>
  </div>
  <div class="field">
    <%= f.label :calories %><br>
    <%= f.number_field :calories, :value => 0 %>
  </div>
  <div class="field">
    <%= f.label :exercise %><br>
    <%= f.time_select :exercise %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
